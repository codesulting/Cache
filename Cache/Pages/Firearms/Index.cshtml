@page
@model Cache.Pages.Firearms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row align-items-center">
    <div class="col">
        <h1>List</h1>
    </div>
    <div class="col text-right">
        <a class="btn btn-primary" asp-page="Create">Create New</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Firearm[0].ManufacturerImporter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firearm[0].Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firearm[0].Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firearm[0].CaliberGauge)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firearm[0].DateAcquired)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firearm[0].Cost)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Firearm) {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ManufacturerImporter)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaliberGauge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAcquired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> | 
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
